<% include ./partials/header.ejs %>
<div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
    <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="image">
    </form>
<div class="profdets flex flex-col items-center mt-10">
    <div class="relative">
        <span id="uploadicon" class="absolute w-10 h-10 bottom-0 right-0 justify-center rounded-full flex items-center bg-zinc-200">
            <i class="text-zinc-700 ri-pencil-fill"></i>
        </span>
        <div class="w-32 h-32 bg-zinc-300 rounded-full overflow-hidden">
            <img  class="w-full h-full ustify-center items-center object-cover" src="/images/uploads/<%=user.profileImage %>" alt="">
        </div>
    </div>
 
    <h1 class="text-3xl font-semibold mt-3 text-white"><%= user.name %></h1>
    <h3 class="text-md mb-2 text-white">@<%= user.username%></h3>
     <a href="/edit" class="py-3 bg-zinc-700 mt-1 rounded-full px-10 text-xs font-semibold">Edit</a>
     <a href="/add" class="px-10 py-2 bg-red-700 rounded-lg text-xs font-semibold mt-4">Add New Post</a>
</div>
<div class="cards flex flex-wrap gap-10 px-10 mt-10">
    <div class="card">

        <div class="w-52 h-40 bg-zinc-200  rounded-lg overflow-hidden">
            <img class="w-full h-full object-cover" src="/images/uploads/<%= user?.posts[0]?.image %>" alt="">
        </div>
        <!-- <a class="inline-block text-xl font-semibold mt-5">Y</a> -->
        <a href="/show/posts" class="inline-block text-xl font-semibold mt-5">Your Uploaded Pins</a>
        <h5 class="text-sm font-medium"><%= user.posts.length%></h5>
    </div>
    
   
</div>
</div>


<script>
    document.querySelector("#uploadicon").addEventListener("click",function(){
document.querySelector("#uploadform input").click()
    })
document.querySelector("#uploadform input").addEventListener("change",function(){
    document.querySelector("#uploadform").submit();
})

</script>
<% include ./partials/footer.ejs %>
