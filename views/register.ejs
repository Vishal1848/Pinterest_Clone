<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-center bg-cover  bg-zinc-300 flex items-center justify-center">
    <div class="w-[29vw] h-[75vh] bg-white  px-20 py-10 rounded-[30px]">
   <h1 class="text-3xl tracking-tight  capitalize text-center font-semibold text-zinc-700 leading-none">Create New Account</h1>
   <form action="/register" method="post">
     <input class="border-2 rounded-md block mt-5 w-full px3 py-2" type="text" name="username" placeholder="username">
     <input class="border-2 rounded-md block mt-5 w-full px3 py-2" type="text" name="fullname" placeholder="Full Name">

     <input class="border-2 rounded-md block mt-2 w-full px3 py-2" type="email" name="email" placeholder="email">
     <input class="border-2 rounded-md block mt-2 w-full px3 py-2" type="number" name="contact" placeholder="contact">


     <input class="border-2 rounded-md block mt-2 w-full px3 py-2" type="password" name="password" placeholder="password">
     <input class="border-2 rounded-full block mt-5 w-full px3 py-2 bg-red-600 rounded-full text-white" value="Create New Account" type="submit">
     <p class="text-xs font-semibold text-zinc-700 text-center mt-7 w-3/4 mx-auto">
       By continuing, you agree to Pinterest's Terms of Service; Opens a new tab and acknowledge that you've read our Privacy Policy. Notice at collection.
     </p>
   </form>
   <a href="/" class="text-sm text-zinc-700 mt-7 inline-block font-semibold text-center w-full">Login Existing account</a>
    </div>
   </div>
